{
  "name": "cloud-ide-extension",
  "publisher": "Revature",
  "repository": "https://github.com/Revature/cloud-ide-extension",
  "displayName": "Cloud IDE Extension",
  "description": "Management tool for the Revature Cloud IDE",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "viewsWelcome": [
    {
      "view": "cloudIdeView",
      "contents": "Loading Cloud IDE resources...",
      "when": "!cloudIdeInitialized"
    }
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cloud-ide-extension.showInfo",
        "title": "Show Info"
      },
      {
        "command": "cloud-ide-extension.openDevServer",
        "title": "Open Dev Server"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cloud-ide-explorer",
          "title": "Cloud IDE",
          "icon": "resources/cloud.svg"
        }
      ]
    },
    "views": {
      "cloud-ide-explorer": [
        {
          "icon": "resources/cloud.svg",
          "id": "cloudIdeView",
          "name": "Cloud IDE Resources"
        }
      ]
    },
    "menus": {
      "view/title": [],
      "view/item/context": [
        {
          "command": "cloud-ide-extension.showInfo",
          "when": "view == cloudIdeView && viewItem == infoHeader",
          "group": "inline"
        },
        {
          "command": "cloud-ide-extension.openDevServer",
          "when": "view == cloudIdeView && viewItem == devServerMenu",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}